    <delete file="${bin.dir}/asc.exe"/>
    <copy file="${bin.dir}/asc.exe.j" tofile="${bin.dir}/asc.exe"/>
    <copy todir="regress">
        <fileset dir="${log.dir}" includes="**/*.p"/>
